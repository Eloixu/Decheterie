<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/rechercher_usager_fragment_listview_item_usager_name_textView_layout_height"
    android:background="@drawable/button_blue_shallow"
    android:padding="@dimen/rechercher_usager_fragment_listview_item_usager_name_textView_paddingStart">

    <TextView
        android:id="@+id/ruv_nom"
        android:textSize="@dimen/rechercher_usager_fragment_listview_item_usager_name_textView_textSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/ruv_adresse"
        android:layout_below="@id/ruv_nom"
        android:textSize="@dimen/ru_ad_textsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rechercher_usager_fragment_listview_item_usager_id_textView_layout_margin"/>

    <TextView
        android:id="@+id/ruv_id"
        android:textColor="@color/tablette_hint"
        android:textSize="@dimen/rechercher_usager_fragment_listview_item_usager_id_textView_textSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/rechercher_usager_fragment_listview_item_usager_id_textView_layout_margin"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
