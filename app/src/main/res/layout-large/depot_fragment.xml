<LinearLayout
    android:id="@+id/depot_fragment_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/depot_fragment_top_horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/depot_fragment_top_horizontalScrollView_layout_height"
        android:gravity="center_vertical"
        android:background="@color/depot_fragment_top_horizontalScrollViewb_backgroundColor"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/depot_fragment_gallery_flux_linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="top"  />
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/depot_fragment_bottom_horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/depot_fragment_bottom_horizontalScrollView_layout_height"
        android:gravity="center_vertical"
        android:fadeScrollbars="false"
        android:layout_weight="1">


        <LinearLayout
            android:id="@+id/depot_fragment_gallery_flux_choisi_linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="top">

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/depot_fragment_volume_total_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <TextView
                android:id="@+id/depot_fragment_volume_total_textView"
                android:text="@string/depot_fragment_volume_total_textView_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/depot_fragment_volume_total_textView_paddingStart"
                android:layout_marginTop="@dimen/depot_fragment_volume_total_textView_layout_marginTop"
                android:textSize="@dimen/general_txt_size" />

            <EditText
                android:id="@+id/depot_fragment_volume_total_editText"
                android:inputType="numberDecimal"
                android:layout_marginLeft="@dimen/depot_fragment_volume_total_editText_layout_marginLeft"
                android:layout_marginRight="@dimen/depot_fragment_volume_total_editText_layout_marginRight"
                android:layout_marginTop="@dimen/depot_fragment_volume_total_editText_layout_marginTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:paddingLeft="@dimen/depot_fragment_volume_total_editText_paddingLeft"
                android:paddingRight="@dimen/depot_fragment_volume_total_editText_paddingRight"
                android:paddingTop="@dimen/depot_fragment_volume_total_editText_paddingTop"
                android:paddingBottom="@dimen/depot_fragment_volume_total_editText_paddingBottom"
                android:textSize="@dimen/depot_fragment_volume_total_editText_textSize"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/depot_fragment_unite_volume_total_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/depot_fragment_volume_total_textView_layout_marginTop"
                android:textSize="@dimen/general_txt_size" />


        </LinearLayout>

        <Button
            android:id="@+id/depot_fragment_valider_button"
            android:text="@string/depot_fragment_valider_button_text"
            android:textSize="@dimen/depot_fragment_valider_button_textSize"
            android:layout_width="@dimen/depot_fragment_valider_button_layout_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/depot_fragment_valider_button_layout_marginTop"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>
