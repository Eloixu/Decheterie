<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:background="#aec6cf"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/id_gallery_flux"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="top"  />
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:fadeScrollbars="false"
        android:layout_weight="1">


        <LinearLayout
            android:id="@+id/id_gallery_flux_choisi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="top">

            <ImageView
                android:id="@+id/imageView_finger"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/finger3"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/textView_volume_total"
            android:text="Volume total : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/accueil_fragment_textView_paddingStart"
            android:layout_marginTop="@dimen/accueil_fragment_textView_layout_marginTop"
            android:textSize="@dimen/general_txt_size"
            />
        <Button
            android:id="@+id/btn_valider"
            android:text="valider"
            android:textSize="@dimen/accueil_fragment_btn_identification_textSize"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>
