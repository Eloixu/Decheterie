<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rechercher_usager_fragment_top_linearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3">

        <LinearLayout
            android:id="@+id/rechercher_usager_fragment_filtre_total_linearLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="185dp">
            <LinearLayout
                android:id="@+id/rechercher_usager_fragment_line1_linearLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0.5">
                <LinearLayout
                    android:id="@+id/rechercher_usager_fragment_filtre1_linearLayout"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/rechercher_usager_fragment_filtre1_textView"
                        android:text="Nom :         "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textSize="@dimen/general_txt_size"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/rechercher_usager_fragment_filtre1_editText"
                        style="@style/TkEditText"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:inputType="textNoSuggestions"
                        android:textColor="@color/blue"
                        android:singleLine="true"
                        android:maxLength="80"
                        android:gravity="left|center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rechercher_usager_fragment_filtre2_linearLayout"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50dp">

                    <TextView
                        android:id="@+id/rechercher_usager_fragment_filtre2_textView"
                        android:text="Type Carte :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textSize="@dimen/general_txt_size"
                        android:textStyle="bold"
                        android:layout_marginEnd="10dp"/>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="70dp"
                        android:background="@drawable/border_spinner"
                        android:orientation="horizontal">
                    <Spinner
                        android:id="@+id/rechercher_usager_fragment_filtre2_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:spinnerMode="dropdown" />
                        />
                    <ImageView
                        android:id="@+id/rechercher_usager_fragment_filtre2_imageView"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/drop" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rechercher_usager_fragment_line2_linearLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:layout_weight="0.5">
                <LinearLayout
                    android:id="@+id/rechercher_usager_fragment_filtre3_linearLayout"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/rechercher_usager_fragment_filtre3_textView"
                        android:text="Adresse :   "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|center"
                        android:textSize="@dimen/general_txt_size"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/rechercher_usager_fragment_filtre3_editText"
                        style="@style/TkEditText"
                        android:layout_width="483dp"
                        android:layout_height="40dp"
                        android:inputType="textNoSuggestions"
                        android:textColor="@color/blue"
                        android:singleLine="true"
                        android:maxLength="80"
                        android:gravity="left|center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rechercher_usager_fragment_top_right_linearLayout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:visibility="gone">
            <Button
                android:id="@+id/rechercher_usager_fragment_rechercher_button"
                android:text="rechercher"
                android:textSize="@dimen/accueil_fragment_btn_identification_textSize"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_gravity="left|center"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rechercher_usager_fragment_bottom_linearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:gravity="center">
        <ListView
            android:id="@+id/rechercher_usager_fragment_usager_listView"
            android:layout_width="614dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:divider="#ffffff"
            android:dividerHeight="3dp"
            ></ListView>
    </LinearLayout>
</LinearLayout>