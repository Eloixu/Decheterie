<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout_ru_top"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3">

        <LinearLayout
            android:id="@+id/linearLayout_ru_filtre_total"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="185dp">
            <LinearLayout
                android:id="@+id/linearLayout_ru_line1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0.5">
                <LinearLayout
                    android:id="@+id/linearLayout_ru_filtre1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_ru_filtre1"
                        android:text="Nom :         "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textSize="@dimen/general_txt_size"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edittext_ru_filtre1"
                        style="@style/TkEditText"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:textColor="@color/blue"
                        android:singleLine="true"
                        android:maxLength="80"
                        android:gravity="left|center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_ru_filtre2"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50dp">

                    <TextView
                        android:id="@+id/textView_ru_filtre2"
                        android:text="Type Carte :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textSize="@dimen/general_txt_size"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner_ru_filtre2"
                        android:spinnerMode="dropdown"
                        android:textSize="19sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_ru_line2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:layout_weight="0.5">
                <LinearLayout
                    android:id="@+id/linearLayout_ru_filtre3"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_ru_filtre3"
                        android:text="Adresse :   "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|center"
                        android:textSize="@dimen/general_txt_size"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edittext_ru_filtre3"
                        style="@style/TkEditText"
                        android:layout_width="483dp"
                        android:layout_height="40dp"
                        android:textColor="@color/blue"
                        android:singleLine="true"
                        android:maxLength="80"
                        android:gravity="left|center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_ru_top_right"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:visibility="gone">
            <Button
                android:id="@+id/btn_ru_rechercher"
                android:text="rechercher"
                android:textSize="@dimen/accueil_fragment_btn_identification_textSize"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_gravity="left|center"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_ru_bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:gravity="center">
        <ListView
            android:id="@+id/listView_ru_usager"
            android:layout_width="614dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:divider="#ffffff"
            android:dividerHeight="3dp"
            ></ListView>
    </LinearLayout>
</LinearLayout>